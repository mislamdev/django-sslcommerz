# Example .env file for SSLCOMMERZ configuration
# Copy this file to .env in your project root and update the values

# SSLCOMMERZ Store Credentials (Required)
SSLCOMMERZ_STORE_ID=your_store_id_here
SSLCOMMERZ_STORE_PASSWORD=your_store_password_here

# Environment Configuration
SSLCOMMERZ_IS_SANDBOX=True

# Payment URLs (Required)
SSLCOMMERZ_SUCCESS_URL=https://yourdomain.com/payment/success/
SSLCOMMERZ_FAIL_URL=https://yourdomain.com/payment/fail/
SSLCOMMERZ_CANCEL_URL=https://yourdomain.com/payment/cancel/
SSLCOMMERZ_IPN_URL=https://yourdomain.com/payment/ipn/

# Optional Settings
SSLCOMMERZ_TIMEOUT=30
SSLCOMMERZ_VERIFY_SSL=True
SSLCOMMERZ_LOG_REQUESTS=False
SSLCOMMERZ_AUTO_VALIDATE_IPN=True
SSLCOMMERZ_STORE_NAME=Your Store Name
SSLCOMMERZ_CURRENCY=BDT

# Django Secret Key (if not in settings)
SECRET_KEY=your-secret-key-here

# Database URL (if using environment-based config)
DATABASE_URL=sqlite:///db.sqlite3

# Debug mode
DEBUG=True
